{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-project-helper": {
      "projectType": "library",
      "root": "projects/ng-project-helper",
      "sourceRoot": "projects/ng-project-helper/src",
      "prefix": "",
      "schematics": {
        "@schematics/angular:component": {
          "prefix": "",
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true,
          "prefix": ""
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-project-helper/tsconfig.lib.json",
            "project": "projects/ng-project-helper/ng-package.json"
          }
        ,          "configurations": {
            "production": {
              "tsConfig": "projects/ng-project-helper/tsconfig.lib.prod.json"
            }
          }
},
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-project-helper/src/test.ts",
            "tsConfig": "projects/ng-project-helper/tsconfig.spec.json",
            "karmaConfig": "projects/ng-project-helper/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-project-helper/tsconfig.lib.json",
              "projects/ng-project-helper/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "ng-project-helper"
}
